{
  "id": "producto",
  "label": "Producto",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "nombre": {
        "type": "Text",
        "config": {
          "label": "Nombre del Producto",
          "placeholder": "Ej: DKC3045"
        }
      },
      "codigo": {
        "type": "Text",
        "config": {
          "label": "Código del Producto",
          "placeholder": "Ej: DKC3045"
        }
      },
      "claim": {
        "type": "Text",
        "config": {
          "label": "Claim Marketing",
          "placeholder": "Ej: Alto rendimiento y resistencia"
        }
      },
      "tipo_semilla": {
        "type": "Select",
        "config": {
          "label": "Tipo de Semilla",
          "options": ["maiz", "colza"],
          "default_value": "maiz"
        }
      },
      "uso": {
        "type": "Select",
        "config": {
          "label": "Uso (solo si Maíz)",
          "options": ["grano", "silo", "preceon"]
        }
      },
      "zona": {
        "type": "Select",
        "config": {
          "label": "Zona Geográfica (solo si Maíz)",
          "options": [
            "ebro",
            "centro-sur-extremadura-andalucia",
            "noroeste",
            "portugal"
          ]
        }
      },
      "zonas": {
        "type": "Group",
        "config": {
          "label": "Zonas (multi)",
          "fields": {
            "zona": {
              "type": "Select",
              "config": {
                "label": "Zona",
                "options": [
                  "ebro",
                  "centro-sur-extremadura-andalucia",
                  "noroeste",
                  "portugal"
                ]
              }
            }
          }
        }
      },
      "categoria": {
        "type": "Select",
        "config": {
          "label": "Categoría",
          "options": [
            "maiz-grano",
            "silo",
            "preceon",
            "colza",
            "fitosanitario"
          ],
          "default_value": "maiz-grano"
        }
      },
      "proteccion": {
        "type": "Select",
        "config": {
          "label": "Protección de Cultivo",
          "options": ["herbicida", "insecticida", "bioestimulante"]
        }
      },
      "beneficios": {
        "type": "StructuredText",
        "config": {
          "label": "Beneficios",
          "placeholder": "Lista de beneficios del producto"
        }
      },
      "recomendaciones_uso": {
        "type": "StructuredText",
        "config": {
          "label": "Recomendaciones de Uso",
          "placeholder": "Recomendaciones para el uso del producto"
        }
      },
      "ciclo_rm": {
        "type": "Text",
        "config": {
          "label": "CICLO / RM",
          "placeholder": "Ej: 700/118"
        }
      },
      "descripcion_popup": {
        "type": "StructuredText",
        "config": {
          "label": "Descripción para popup",
          "placeholder": "Texto descriptivo breve para el popup",
          "single": "paragraph,preformatted"
        }
      },
      "tipo_grano": {
        "type": "Text",
        "config": {
          "label": "Tipo de grano",
          "placeholder": "Ej: Dentado"
        }
      },
      "altura_planta_texto": {
        "type": "Text",
        "config": {
          "label": "Altura de planta (solo Colza)",
          "placeholder": "Ej: Media"
        }
      },
      "floracion_texto": {
        "type": "Text",
        "config": {
          "label": "Floración",
          "placeholder": "Ej: Media"
        }
      },
      "madurez_texto": {
        "type": "Text",
        "config": {
          "label": "Madurez (solo Colza)",
          "placeholder": "Ej: Media"
        }
      },
      "insercion_mazorca": {
        "type": "Text",
        "config": {
          "label": "Inserción de mazorca",
          "placeholder": "Ej: Media"
        }
      },
      "caracteristicas": {
        "type": "Group",
        "config": {
          "label": "Características (0-10)",
          "fields": {
            "clave": {
              "type": "Select",
              "config": {
                "label": "Clave",
                "options": [
                  "potencial_produccion",
                  "adaptabilidad",
                  "resistencia_caida",
                  "tolerancia_virus",
                  "stay_green",
                  "respuesta_alta_densidad",
                  "calidad_grano",
                  "contenido_aceite",
                  "tolerancia_dehiscencia",
                  "sanidad",
                  "tolerancia_sequia",
                  "implantacion"
                ]
              }
            },
            "valor": {
              "type": "Number",
              "config": {
                "label": "Valor (0-10, admite decimales)",
                "placeholder": "Ej: 8.5"
              }
            },
            "label_custom": {
              "type": "Text",
              "config": {
                "label": "Etiqueta personalizada (opcional)",
                "placeholder": "Si quieres sobreescribir la etiqueta por defecto"
              }
            }
          }
        }
      },
      "saco_ref": {
        "type": "Link",
        "config": {
          "label": "Saco (referencia)",
          "select": "document",
          "customtypes": ["saco"]
        }
      },
      "orden": {
        "type": "Number",
        "config": {
          "label": "Orden en Carrusel",
          "placeholder": "Ej: 1"
        }
      }
    }
  }
}
