/**
 * Bayer Sans Web Fonts
 * 
 * Declaraciones @font-face para todas las variantes de Bayer Sans
 * Las fuentes est√°n ubicadas en /fonts/ (public/fonts/)
 */

/* Thin (100) */
@font-face {
  font-family: 'Bayer Sans';
  src: url('/fonts/BayerSansWeb-Thin.woff2') format('woff2');
  font-weight: 100;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: 'Bayer Sans';
  src: url('/fonts/BayerSansWeb-ThinItalic.woff2') format('woff2');
  font-weight: 100;
  font-style: italic;
  font-display: swap;
}

