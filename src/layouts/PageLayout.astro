---
import Base from './Base.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title?: string;
  description?: string;
  lang?: string;
  ogImage?: string;
}

const {
  title,
  description,
  lang = 'es',
  ogImage,
} = Astro.props;
---

<Base title={title} description={description} lang={lang} ogImage={ogImage}>
  <Header lang={lang} />
  <main id="main-content">
    <slot />
  </main>
  <Footer lang={lang} />
</Base>

