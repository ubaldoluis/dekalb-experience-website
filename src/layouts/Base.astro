---
import '../styles/global.css';
import '../styles/components.css';

interface Props {
  title?: string;
  description?: string;
  lang?: string;
  ogImage?: string;
}

const {
  title = 'DEKALB Experience',
  description = 'Expertos a tu lado',
  lang = 'es',
  ogImage,
} = Astro.props;

const siteUrl = import.meta.env.SITE_URL || 'https://dekalb-experience.com';
const fullTitle = title === 'DEKALB Experience' ? title : `${title} | DEKALB Experience`;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Inject @font-face rules and CSS variables BEFORE any CSS loads to fix Vercel 404 issues -->
    <script is:inline>
      (function() {
        // Execute immediately, before any CSS loads
        if (typeof window === 'undefined') return;
        const baseUrl = window.location.origin;
        
        const fontFaces = [
          { name: 'BayerSansWeb-Thin.woff2', weight: 100, style: 'normal' },
          { name: 'BayerSansWeb-ThinItalic.woff2', weight: 100, style: 'italic' },
          { name: 'BayerSansWeb-ExtraLight.woff2', weight: 200, style: 'normal' },
          { name: 'BayerSansWeb-ExtraLightItalic.woff2', weight: 200, style: 'italic' },
          { name: 'BayerSansWeb-Light.woff2', weight: 300, style: 'normal' },
          { name: 'BayerSansWeb-LightItalic.woff2', weight: 300, style: 'italic' },
          { name: 'BayerSansWeb-Regular.woff2', weight: 400, style: 'normal' },
          { name: 'BayerSansWeb-Italic.woff2', weight: 400, style: 'italic' },
          { name: 'BayerSansWeb-Medium.woff2', weight: 500, style: 'normal' },
          { name: 'BayerSansWeb-MediumItalic.woff2', weight: 500, style: 'italic' },
          { name: 'BayerSansWeb-Medium.woff2', weight: 600, style: 'normal' },
          { name: 'BayerSansWeb-MediumItalic.woff2', weight: 600, style: 'italic' },
          { name: 'BayerSansWeb-Bold.woff2', weight: 700, style: 'normal' },
          { name: 'BayerSansWeb-BoldItalic.woff2', weight: 700, style: 'italic' },
          { name: 'BayerSansWeb-Heavy.woff2', weight: 800, style: 'normal' },
          { name: 'BayerSansWeb-HeavyItalic.woff2', weight: 800, style: 'italic' },
          { name: 'BayerSansWeb-Black.woff2', weight: 900, style: 'normal' },
          { name: 'BayerSansWeb-BlackItalic.woff2', weight: 900, style: 'italic' }
        ];
        
        const style = document.createElement('style');
        style.id = 'dynamic-fonts';
        style.textContent = fontFaces.map(font => `
          @font-face {
            font-family: 'Bayer Sans';
            src: url('${baseUrl}/fonts/${font.name}') format('woff2');
            font-weight: ${font.weight};
            font-style: ${font.style};
            font-display: swap;
          }
        `).join('\n');
        
        // Insert at the very beginning of head, before any other stylesheets
        if (document.head.firstChild) {
          document.head.insertBefore(style, document.head.firstChild);
        } else {
          document.head.appendChild(style);
        }
        
        // Set CSS variable for layer filter immediately
        document.documentElement.style.setProperty('--layer-filter-url', `url('${baseUrl}/layer_filter.png')`);
      })();
    </script>
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    {ogImage && <meta property="og:image" content={ogImage} />}
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={siteUrl} />
    <meta property="twitter:title" content={fullTitle} />
    <meta property="twitter:description" content={description} />
    {ogImage && <meta property="twitter:image" content={ogImage} />}
    
    <!-- Schema.org JSON-LD -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "DEKALB Experience",
      "url": siteUrl,
      "logo": `${siteUrl}/logo-dekalb.svg`,
      "description": description,
      "sameAs": [
        "https://www.bayer.com",
        "https://www.dekalb.com"
      ]
    })} />
    
    <title>{fullTitle}</title>
  </head>
  <body>
    <a href="#main-content" class="skip-link">Saltar al contenido principal</a>
    <slot />
  </body>
</html>

