---
import PageLayout from "../../layouts/PageLayout.astro";
import { getFieldShieldContent } from "../../utils/prismic";
import { renderRichText } from "../../utils/prismic-rich-text";
import * as prismic from "@prismicio/client";

const lang = "pt";
let fieldShieldContent = null;

try {
  fieldShieldContent = await getFieldShieldContent(lang);
} catch (error) {
  console.error("Error fetching FieldShield content:", error);
}

const defaultContent = {
  hero: {
    logo: undefined,
    titulo: "FieldShield",
    descripcion: [],
    imagen_fondo: undefined,
    imagen_fondo_mobile: undefined,
  },
  titulo_intro: "",
  texto_intro: [],
  modulos: [],
  soluciones_fieldshield: { titulo: "", texto: [] },
  cards_textos_plus: [],
  cards_gris: [],
  seleccion_hibridos: { titulo: "", texto: [] },
  bloque_degradado: { imagen: undefined },
  cards_finales: [],
};

const content = fieldShieldContent || defaultContent;
---

<PageLayout
  title="FieldShield"
  description={prismic.asText(content.hero.descripcion) || ""}
  lang={lang}
>
  <!-- Hero Section -->
  <section class="fieldshield-hero">
    <div
      class="fieldshield-hero-gradient"
      style={content.hero.imagen_fondo?.url
        ? `background-image: url("${content.hero.imagen_fondo.url}");`
        : ""}
    >
    </div>
    {
      content.hero.imagen_fondo_mobile?.url && (
        <div class="fieldshield-hero-mobile-image">
          <img
            src={content.hero.imagen_fondo_mobile.url}
            alt={content.hero.imagen_fondo_mobile.alt || ""}
            loading="lazy"
          />
        </div>
      )
    }
    <div class="container">
      <div class="fieldshield-hero-content">
        {
          content.hero.logo?.url && (
            <div class="fieldshield-logo">
              <img
                src={content.hero.logo.url}
                alt={content.hero.logo.alt || "FieldShield"}
                loading="lazy"
              />
            </div>
          )
        }
        <h1 class="fieldshield-hero-title">{content.hero.titulo}</h1>
        <div
          class="fieldshield-hero-description"
          set:html={renderRichText(content.hero.descripcion)}
        />
      </div>
    </div>
  </section>

  <!-- Título Intro + Texto -->
  {
    content.titulo_intro && (
      <section class="fieldshield-titulo-intro">
        <div class="container">
          <div class="fieldshield-titulo-intro-content">
            <h2 class="fieldshield-titulo-intro-title">
              {content.titulo_intro}
            </h2>
            <div
              class="fieldshield-titulo-intro-text"
              set:html={renderRichText(content.texto_intro)}
            />
          </div>
        </div>
      </section>
    )
  }

  <!-- Módulos Section -->
  {
    content.modulos && content.modulos.length > 0 && (
      <section class="fieldshield-modulos">
        <div class="container">
          {content.modulos.map((modulo, index) => (
            <div class={`fieldshield-modulo fieldshield-modulo-${index}`}>
              <div class="fieldshield-modulo-image">
                {modulo.imagen?.url ? (
                  <img
                    src={modulo.imagen.url}
                    alt={modulo.imagen.alt || modulo.titulo}
                    loading="lazy"
                  />
                ) : (
                  <div class="fieldshield-modulo-placeholder">
                    {modulo.titulo}
                  </div>
                )}
              </div>
              <div class="fieldshield-modulo-content">
                <h3 class="fieldshield-modulo-title">{modulo.titulo}</h3>
                {modulo.descripcion && (
                  <div class="fieldshield-modulo-description">
                    <div set:html={renderRichText(modulo.descripcion)} />
                  </div>
                )}
              </div>
            </div>
          ))}
        </div>
      </section>
    )
  }

  <!-- Soluciones FieldShield -->
  {
    content.soluciones_fieldshield.titulo && (
      <section class="fieldshield-soluciones">
        <div class="container">
          <div class="fieldshield-soluciones-content">
            <h2 class="fieldshield-soluciones-title">
              {content.soluciones_fieldshield.titulo}
            </h2>
            <div
              class="fieldshield-soluciones-text"
              set:html={renderRichText(content.soluciones_fieldshield.texto)}
            />
          </div>
        </div>
      </section>
    )
  }

  <!-- Cards con Textos unidos por '+' -->
  {
    content.cards_textos_plus && content.cards_textos_plus.length > 0 && (
      <section class="fieldshield-cards-plus">
        <div class="container">
          <div class="fieldshield-cards-plus-grid">
            {content.cards_textos_plus.map((card, index) => (
              <>
                <div class="fieldshield-card-plus">
                  <h3 class="fieldshield-card-plus-title">{card.titulo}</h3>
                  <div
                    class="fieldshield-card-plus-desc"
                    set:html={renderRichText(card.descripcion)}
                  />
                </div>
                {index < content.cards_textos_plus.length - 1 && (
                  <div class="fieldshield-card-plus-separator">
                    <img
                      src="/separador_fieldshield.svg"
                      alt="+"
                      width="32"
                      height="32"
                    />
                  </div>
                )}
              </>
            ))}
          </div>
        </div>
      </section>
    )
  }

  <!-- Cards con Degradado Gris -->
  {
    content.cards_gris && content.cards_gris.length > 0 && (
      <section class="fieldshield-cards-gris">
        <div class="container">
          <div class="fieldshield-cards-gris-grid">
            {content.cards_gris.map((card) => (
              <div class="fieldshield-card-gris">
                {card.imagen?.url && (
                  <div class="fieldshield-card-gris-image">
                    <img
                      src={card.imagen.url}
                      alt={card.imagen.alt || ""}
                      loading="lazy"
                    />
                  </div>
                )}
                <div
                  class="fieldshield-card-gris-text"
                  set:html={renderRichText(card.texto)}
                />
              </div>
            ))}
          </div>
        </div>
      </section>
    )
  }

  <!-- Selección de Híbridos -->
  {
    content.seleccion_hibridos.titulo && (
      <section class="fieldshield-seleccion">
        <div class="container">
          <div class="fieldshield-seleccion-content">
            <h2 class="fieldshield-seleccion-title">
              {content.seleccion_hibridos.titulo}
            </h2>
            <div
              class="fieldshield-seleccion-text"
              set:html={renderRichText(content.seleccion_hibridos.texto)}
            />
          </div>
        </div>
      </section>
    )
  }

  <!-- Bloque Degradado -->
  {
    content.bloque_degradado.imagen?.url && (
      <section class="fieldshield-bloque-degradado">
        <div class="container">
          <div class="fieldshield-bloque-degradado-content">
            <img
              src={content.bloque_degradado.imagen.url}
              alt={content.bloque_degradado.imagen.alt || ""}
              loading="lazy"
            />
          </div>
        </div>
      </section>
    )
  }

  <!-- Cards Finales -->
  {
    content.cards_finales && content.cards_finales.length > 0 && (
      <section class="fieldshield-cards-finales">
        <div class="container">
          <div class="fieldshield-cards-finales-grid">
            {content.cards_finales.map((card, index) => (
              <div
                class={`fieldshield-card-final ${
                  card.tabs ? "fieldshield-card-final-with-tabs" : ""
                }`}
              >
                {card.imagen?.url && (
                  <div class="fieldshield-card-final-image">
                    <img
                      src={card.imagen.url}
                      alt={card.imagen.alt || ""}
                      loading="lazy"
                    />
                  </div>
                )}
                <div
                  class="fieldshield-card-final-text"
                  set:html={renderRichText(card.texto)}
                />
                {card.tabs && card.tabs.length > 0 && (
                  <div class="fieldshield-card-final-tabs">
                    {card.tabs.map((tab) => (
                      <span class="fieldshield-card-final-tab">
                        {tab.label}
                      </span>
                    ))}
                  </div>
                )}
              </div>
            ))}
          </div>
        </div>
      </section>
    )
  }
</PageLayout>

<style>
  /* Hero - Reutilizando estilos de Acceleron pero con degradado amarillo/naranja */
  .fieldshield-hero {
    position: relative;
    padding: 0 0 var(--spacing-16) 0;
    background: linear-gradient(135deg, #ffcb05 0%, #f5a81c 100%);
    border-radius: 0 0 60px 60px;
    overflow: hidden;
    min-width: auto;
    min-height: 628px;
  }

  .fieldshield-hero-gradient {
    display: none;
  }

  .fieldshield-hero-mobile-image {
    position: relative;
    z-index: 1;
    width: 100%;
    display: block;
  }

  .fieldshield-hero-mobile-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  @media (min-width: 1024px) {
    .fieldshield-hero-gradient {
      display: block;
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 100%;
      background-repeat: no-repeat;
      background-position: right top;
      background-size: contain;
      z-index: 0;
    }
    .fieldshield-hero {
      position: relative;
      padding: var(--spacing-16) 0;
      background: linear-gradient(
        135deg,
        #f5a81c 0%,
        #ffcb05 70%,
        #ffffff 100%
      );
      border-radius: 0;
      border-bottom-left-radius: 60px;
      min-width: 500px !important;
      min-height: 628px;
      display: flex;
      align-items: center;
    }
    .fieldshield-hero .container {
      display: flex;
      align-items: center;
      height: 100%;
    }
    .fieldshield-hero-mobile-image {
      display: none;
    }
    .fieldshield-hero-content {
      padding-top: 0;
    }
  }

  .fieldshield-hero-content {
    position: relative;
    z-index: 1;
    max-width: 462px;
  }

  .fieldshield-logo {
    margin-bottom: var(--spacing-8);
  }

  .fieldshield-logo img {
    height: 80px;
    width: auto;
  }

  .fieldshield-hero-title {
    font-size: 2rem;
    font-weight: 700;
    font-family: var(--font-family-primary);
    color: #ffffff;
    margin: 0 0 var(--spacing-4) 0;
    line-height: 2.2rem;
    letter-spacing: 0.96px;
  }

  .fieldshield-hero-description {
    font-size: 1.2rem;
    font-weight: 400;
    font-family: var(--font-family-primary);
    color: #ffffff;
    margin: 0;
    line-height: 1.3rem;
  }

  /* Título Intro Azul */
  .fieldshield-titulo-intro {
    padding: var(--spacing-16) 0;
    background-color: #ffffff;
  }

  .fieldshield-titulo-intro-content {
    max-width: 707px;
    margin: 0 auto;
    text-align: center;
  }

  .fieldshield-titulo-intro-title {
    font-size: 34px;
    font-weight: 700;
    font-family: var(--font-family-primary);
    color: #009ddb;
    margin: 0 0 var(--spacing-6) 0;
    line-height: 40.8px;
  }

  .fieldshield-titulo-intro-text {
    font-size: 20px;
    font-weight: 400;
    font-family: var(--font-family-primary);
    color: #313639;
    margin: 0;
    line-height: 28px;
  }

  /* Módulos - Reutilizando estilos de Acceleron */
  .fieldshield-modulos {
    padding: var(--spacing-16) 0;
    background-color: #ffffff;
  }

  .fieldshield-modulo {
    display: flex;
    flex-direction: column;
    gap: 0;
    margin-bottom: var(--spacing-12);
    overflow: hidden;
    background: linear-gradient(to right, #ffffff 0%, #e9e7e4 100%);
  }

  .fieldshield-modulo-image {
    width: 100%;
    height: 300px;
    overflow: hidden;
    position: relative;
  }

  .fieldshield-modulo-image img {
    width: 100%;
    height: 100%;
    object-fit: fill;
  }

  .fieldshield-modulo-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(to right, #e9e7e4 0%, #ffffff 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #313639;
    font-size: 24px;
    font-weight: 600;
  }

  .fieldshield-modulo-content {
    padding: var(--spacing-8);
    background-color: transparent;
  }

  .fieldshield-modulo-title {
    font-size: 28px;
    font-weight: 700;
    font-family: var(--font-family-primary);
    color: #009ddb;
    margin: 0 0 var(--spacing-4) 0;
    line-height: 34px;
  }

  .fieldshield-modulo-description {
    font-size: 14px;
    font-weight: 400;
    font-family: var(--font-family-primary);
    color: #313639;
    line-height: 22px;
  }

  .fieldshield-modulo-description :global(p) {
    margin-bottom: var(--spacing-4);
  }

  @media (min-width: 1024px) {
    .fieldshield-modulo {
      flex-direction: row;
      align-items: stretch;
      border-radius: 0 0 60px 0;
    }

    .fieldshield-modulo-image {
      width: 45%;
      height: auto;
      flex-shrink: 0;
    }

    .fieldshield-modulo-content {
      width: 55%;
      padding: var(--spacing-6) var(--spacing-20);
      display: flex;
      flex-direction: column;
      justify-content: center;
    }
  }

  /* Soluciones FieldShield */
  .fieldshield-soluciones {
    padding: var(--spacing-16) 0;
    background-color: #ffffff;
  }

  .fieldshield-soluciones-content {
    max-width: 645px;
    margin: 0 auto;
    text-align: center;
  }

  .fieldshield-soluciones-title {
    font-size: 48px;
    font-weight: 700;
    font-family: var(--font-family-primary);
    color: #00527f;
    margin: 0 0 var(--spacing-4) 0;
    line-height: 48px;
    letter-spacing: 0.96px;
  }

  .fieldshield-soluciones-text {
    font-size: 20px;
    font-weight: 400;
    font-family: var(--font-family-primary);
    color: #313639;
    margin: 0;
    line-height: 26px;
  }

  /* Cards con Textos unidos por '+' */
  .fieldshield-cards-plus {
    padding: var(--spacing-16) 0;
    background-color: #ffffff;
  }

  .fieldshield-cards-plus-grid {
    background: linear-gradient(to right, #009ddb 0%, #005475 100%);
    border-radius: 12px;
    padding: var(--spacing-6) var(--spacing-4);
    display: flex;
    flex-direction: column;
    gap: var(--spacing-4);
    align-items: center;
  }

  .fieldshield-card-plus {
    background: transparent;
    border-radius: 0;
    padding: var(--spacing-4) var(--spacing-2);
    text-align: center;
    width: 100%;
  }

  .fieldshield-card-plus-title {
    font-size: 16px;
    font-weight: 700;
    font-family: var(--font-family-primary);
    color: #ffcb0a;
    margin: 0 0 var(--spacing-1) 0;
    line-height: 20px;
  }

  .fieldshield-card-plus-desc {
    font-size: 16px;
    font-weight: 400;
    font-family: var(--font-family-primary);
    color: #ffffff;
    margin: 0;
    line-height: 22px;
  }

  .fieldshield-card-plus-separator {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    margin: 0;
    transform: translateY(-4px);
  }

  .fieldshield-card-plus-separator img {
    width: 32px;
    height: 32px;
    object-fit: contain;
  }

  @media (min-width: 1024px) {
    .fieldshield-cards-plus-grid {
      flex-direction: row;
      justify-content: center;
      align-items: center;
      gap: var(--spacing-2);
      padding: var(--spacing-6) var(--spacing-4);
    }

    .fieldshield-card-plus {
      flex: 1;
      min-width: 0;
      padding: var(--spacing-4) var(--spacing-2);
    }

    .fieldshield-card-plus-separator {
      margin: 0 var(--spacing-1);
    }
  }

  /* Cards con Degradado Gris */
  .fieldshield-cards-gris {
    padding: var(--spacing-16) 0;
    background-color: #ffffff;
  }

  .fieldshield-cards-gris-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-8);
  }

  .fieldshield-card-gris {
    background: linear-gradient(to bottom, #e9e7e4 0%, #ffffff 100%);
    border-radius: 12px;
    padding: var(--spacing-8);
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-4);
  }

  .fieldshield-card-gris-image {
    width: 104px;
    height: 104px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .fieldshield-card-gris-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .fieldshield-card-gris-text {
    font-size: 20px;
    font-weight: 400;
    font-family: var(--font-family-primary);
    color: #313639;
    line-height: 26px;
    text-align: center;
  }

  @media (min-width: 1024px) {
    .fieldshield-cards-gris-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* Selección de Híbridos */
  .fieldshield-seleccion {
    padding: var(--spacing-16) 0;
    background-color: #ffffff;
  }

  .fieldshield-seleccion-content {
    max-width: 780px;
    margin: 0 auto;
    text-align: center;
  }

  .fieldshield-seleccion-title {
    font-size: 48px;
    font-weight: 700;
    font-family: var(--font-family-primary);
    color: #00527f;
    margin: 0 0 var(--spacing-4) 0;
    line-height: 48px;
    letter-spacing: 0.96px;
  }

  .fieldshield-seleccion-text {
    font-size: 20px;
    font-weight: 400;
    font-family: var(--font-family-primary);
    color: #313639;
    margin: 0;
    line-height: 26px;
  }

  /* Bloque Degradado */
  .fieldshield-bloque-degradado {
    padding: var(--spacing-16) 0;
    background: linear-gradient(to bottom, #f3f3f3 0%, #abe2f8 100%);
  }

  .fieldshield-bloque-degradado-content {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
  }

  .fieldshield-bloque-degradado-content img {
    max-width: 100%;
    height: auto;
    object-fit: contain;
  }

  /* Cards Finales */
  .fieldshield-cards-finales {
    padding: var(--spacing-16) 0;
    background-color: #ffffff;
  }

  .fieldshield-cards-finales-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-8);
  }

  .fieldshield-card-final {
    background: linear-gradient(to bottom, #e9e7e4 0%, #ffffff 100%);
    border-radius: 12px;
    padding: var(--spacing-8);
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-4);
  }

  .fieldshield-card-final-image {
    width: 104px;
    height: 104px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .fieldshield-card-final-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .fieldshield-card-final-text {
    font-size: 20px;
    font-weight: 400;
    font-family: var(--font-family-primary);
    color: #313639;
    line-height: 26px;
    text-align: center;
  }

  .fieldshield-card-final-tabs {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-2);
    justify-content: center;
    margin-top: var(--spacing-4);
  }

  .fieldshield-card-final-tab {
    background-color: #009ddb;
    color: #ffffff;
    padding: var(--spacing-2) var(--spacing-4);
    border-radius: 100px;
    font-size: 14px;
    font-weight: 400;
    font-family: var(--font-family-primary);
    line-height: 18px;
  }

  @media (min-width: 1024px) {
    .fieldshield-cards-finales-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* Mobile */
  @media (max-width: 767px) {
    .fieldshield-hero-title {
      font-size: 32px;
      line-height: 40px;
      letter-spacing: 0.5px;
    }

    .fieldshield-hero-description {
      font-size: 18px;
      line-height: 24px;
    }

    .fieldshield-titulo-intro-title {
      font-size: 24px;
      line-height: 30px;
    }

    .fieldshield-titulo-intro-text {
      font-size: 18px;
      line-height: 24px;
    }

    .fieldshield-modulo-title {
      font-size: 24px;
      line-height: 30px;
    }

    .fieldshield-modulo-description {
      font-size: 18px;
      line-height: 24px;
    }

    .fieldshield-soluciones-title {
      font-size: 32px;
      line-height: 40px;
    }

    .fieldshield-seleccion-title {
      font-size: 32px;
      line-height: 40px;
    }
  }
</style>
