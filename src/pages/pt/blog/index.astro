---
import BlogPost from '../../../layouts/BlogPost.astro';
import { getAllArticles } from '../../../utils/prismic';
import { getLocalizedPath } from '../../../utils/i18n';

const lang = 'pt';
let articles: any[] = [];

try {
  articles = await getAllArticles(lang);
} catch (error) {
  console.error('Error fetching articles:', error);
}

const categoryLabels: Record<string, string> = {
  'noticia': 'Notícia',
  'evento': 'Evento',
  'articulo': 'Artigo',
  'lanzamiento': 'Lançamento',
};

// Separar primera noticia (destacada) y resto (máximo 12)
const featuredArticle = articles.length > 0 ? articles[0] : null;
const secondaryArticles = articles.slice(1, 13); // Máximo 12 noticias secundarias
---

<BlogPost
  title="Atualidade Dekalb"
  description="Notícias, eventos e novidades para mantê-lo sempre atualizado com o mundo Dekalb."
  lang={lang}
>
  <div class="blog-wrapper">
    <div class="blog-container">
      <!-- Header -->
      <header class="blog-header">
        <h1 class="blog-title">Atualidade Dekalb</h1>
        <p class="blog-subtitle">
          Notícias, eventos e novidades para mantê-lo sempre atualizado com o mundo Dekalb.
        </p>
      </header>

      <!-- Primera noticia destacada -->
      {featuredArticle && (
        <article class="featured-article">
          <div class="featured-article-image">
            {featuredArticle.imagen_destacada?.url && (
              <img
                src={featuredArticle.imagen_destacada.url}
                alt={featuredArticle.imagen_destacada.alt || featuredArticle.titulo}
                loading="eager"
              />
            )}
          </div>
          <div class="featured-article-content">
            <h2 class="featured-article-title">{featuredArticle.titulo}</h2>
            {featuredArticle.extracto && (
              <p class="featured-article-excerpt">{featuredArticle.extracto}</p>
            )}
            <a
              href={getLocalizedPath(`/blog/${featuredArticle.slug}`, lang)}
              class="btn btn-primary"
            >
              Ler mais
            </a>
          </div>
        </article>
      )}

      <!-- Grid de noticias secundarias -->
      {secondaryArticles.length > 0 && (
        <div class="blog-grid">
          {secondaryArticles.map((article) => (
            <article class="blog-card">
              {article.imagen_destacada?.url && (
                <a href={getLocalizedPath(`/blog/${article.slug}`, lang)} class="blog-image-link">
                  <img
                    src={article.imagen_destacada.url}
                    alt={article.imagen_destacada.alt || article.titulo}
                    class="blog-image"
                    loading="lazy"
                  />
                </a>
              )}
              <div class="blog-card-content">
                <span class="badge badge-primary">
                  {categoryLabels[article.categoria] || article.categoria}
                </span>
                <h2 class="blog-card-title">
                  <a href={getLocalizedPath(`/blog/${article.slug}`, lang)}>
                    {article.titulo}
                  </a>
                </h2>
                <time class="blog-card-date" datetime={article.fecha}>
                  {new Date(article.fecha).toLocaleDateString('pt-PT', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                  })}
                </time>
                {article.extracto && (
                  <p class="blog-card-excerpt">{article.extracto}</p>
                )}
                <a href={getLocalizedPath(`/blog/${article.slug}`, lang)} class="btn btn-outline">
                  Ler mais
                </a>
              </div>
            </article>
          ))}
        </div>
      )}

      {articles.length === 0 && (
        <div class="blog-empty">
          <p>Não há artigos disponíveis no momento.</p>
        </div>
      )}
    </div>
  </div>
</BlogPost>

<style>
  .blog-wrapper {
    background-image: url("/background-article.png");
    background-position: top center;
    background-repeat: no-repeat;
    background-size: contain;
    background-color: #ffffff;
    padding: var(--spacing-16) 0;
  }

  .blog-container {
    max-width: 1196px;
    margin: 0 auto;
    padding: 0 var(--spacing-4);
  }

  /* Header */
  .blog-header {
    text-align: center;
    margin-bottom: var(--spacing-12);
  }

  .blog-title {
    font-size: 48px;
    font-weight: 400;
    font-family: var(--font-family-primary);
    color: #009ddb;
    margin: 0 0 var(--spacing-4) 0;
    line-height: 57.6px;
    letter-spacing: 0.96px;
  }

  .blog-subtitle {
    font-size: 20px;
    font-weight: 400;
    font-family: var(--font-family-primary);
    color: #313639;
    margin: 0;
    line-height: 26px;
  }

  /* Primera noticia destacada */
  .featured-article {
    display: flex;
    flex-direction: column;
    gap: 0;
    margin-bottom: var(--spacing-12);
    overflow: hidden;
  }

  .featured-article-image {
    width: 100%;
    order: 1;
    overflow: hidden;
    border-radius: 12px 12px 0 0;
  }

  .featured-article-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    min-height: 300px;
  }

  .featured-article-content {
    background-color: #E9E7E4;
    padding: var(--spacing-12) var(--spacing-8);
    order: 2;
    border-radius: 0 0 12px 12px;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-6);
  }

  .featured-article-title {
    font-size: 32px;
    font-weight: 700;
    font-family: var(--font-family-primary);
    color: #00527f;
    margin: 0;
    line-height: 1.2;
  }

  .featured-article-excerpt {
    font-size: 20px;
    font-weight: 400;
    font-family: var(--font-family-primary);
    color: #313639;
    margin: 0;
    line-height: 26px;
  }

  .featured-article-content .btn {
    width: auto;
    max-width: 212px;
    display: inline-block;
    text-align: center;
  }

  /* Grid de noticias secundarias */
  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: var(--spacing-6);
  }

  .blog-card {
    background: var(--color-white);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-md);
    transition: all var(--transition-base);
    display: flex;
    flex-direction: column;
  }

  .blog-card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
  }

  .blog-image-link {
    display: block;
    width: 100%;
    overflow: hidden;
  }

  .blog-image {
    width: 100%;
    aspect-ratio: 16/9;
    object-fit: cover;
    transition: transform var(--transition-base);
  }

  .blog-card:hover .blog-image {
    transform: scale(1.05);
  }

  .blog-card-content {
    padding: var(--spacing-4);
    display: flex;
    flex-direction: column;
    gap: var(--spacing-2);
    flex: 1;
  }

  .blog-card-title {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-semibold);
    margin: 0;
  }

  .blog-card-title a {
    color: var(--color-gray-900);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .blog-card-title a:hover {
    color: var(--color-dekalb-primary);
  }

  .blog-card-date {
    font-size: var(--font-size-xs);
    color: var(--color-gray-500);
  }

  .blog-card-excerpt {
    font-size: var(--font-size-sm);
    color: var(--color-gray-600);
    margin: var(--spacing-2) 0;
    flex: 1;
  }

  .blog-empty {
    text-align: center;
    padding: var(--spacing-12);
    color: var(--color-gray-600);
  }

  /* Desktop: Layout 50/50 para noticia destacada */
  @media (min-width: 1024px) {
    .featured-article {
      flex-direction: row;
      align-items: stretch;
      min-height: 400px;
    }

    .featured-article-image {
      width: 50%;
      order: 1;
      border-radius: 60px 0 0 60px;
    }

    .featured-article-image img {
      min-height: 400px;
      height: 100%;
    }

    .featured-article-content {
      width: 50%;
      order: 2;
      padding: var(--spacing-12) var(--spacing-12);
      border-radius: 0 60px 60px 0;
      justify-content: center;
    }

    .featured-article-title {
      font-size: 40px;
    }
  }

  /* Tablet */
  @media (min-width: 768px) and (max-width: 1023px) {
    .blog-title {
      font-size: 36px;
      line-height: 44px;
    }

    .blog-subtitle {
      font-size: 18px;
    }

    .featured-article-title {
      font-size: 28px;
    }
  }

  /* Mobile */
  @media (max-width: 767px) {
    .blog-title {
      font-size: 32px;
      line-height: 40px;
      letter-spacing: 0.5px;
    }

    .blog-subtitle {
      font-size: 18px;
      line-height: 24px;
    }

    .featured-article-title {
      font-size: 24px;
    }

    .featured-article-excerpt {
      font-size: 18px;
      line-height: 24px;
    }

    .blog-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

