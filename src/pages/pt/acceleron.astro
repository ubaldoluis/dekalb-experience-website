---
import PageLayout from "../../layouts/PageLayout.astro";
import { getAcceleronContent } from "../../utils/prismic";
import { renderRichText } from "../../utils/prismic-rich-text";
import * as prismic from "@prismicio/client";

const lang = "pt";
let acceleronContent = null;

try {
  acceleronContent = await getAcceleronContent(lang);
} catch (error) {
  console.error("Error fetching Acceleron content:", error);
}

// Fallback content si no hay datos de Prismic
const defaultContent = {
  hero: {
    logo: undefined,
    titulo: "Acceleron",
    descripcion: [],
    imagen_fondo: undefined,
    imagen_fondo_mobile: undefined,
  },
  introduccion: {
    titulo: "",
    texto: [],
  },
  bloques: [],
  bloque_final: {
    imagen_desktop: undefined,
    imagen_mobile: undefined,
    texto: [],
  },
};

const content = acceleronContent || defaultContent;
---

<PageLayout
  title="Acceleron"
  description={prismic.asText(content.hero.descripcion) || ""}
  lang={lang}
>
  <!-- Hero Section -->
  <section class="acceleron-hero">
    <div
      class="acceleron-hero-gradient"
      style={content.hero.imagen_fondo?.url
        ? `background-image: url("${content.hero.imagen_fondo.url}");`
        : ""}
    >
    </div>
    {
      content.hero.imagen_fondo_mobile?.url && (
        <div class="acceleron-hero-mobile-image">
          <img
            src={content.hero.imagen_fondo_mobile.url}
            alt={content.hero.imagen_fondo_mobile.alt || ""}
            loading="lazy"
          />
        </div>
      )
    }
    <div class="container">
      <div class="acceleron-hero-content">
        {
          content.hero.logo?.url && (
            <div class="acceleron-logo">
              <img
                src={content.hero.logo.url}
                alt={content.hero.logo.alt || "Acceleron"}
                loading="lazy"
              />
            </div>
          )
        }
        <h1 class="acceleron-hero-title">{content.hero.titulo}</h1>
        <div
          class="acceleron-hero-description"
          set:html={renderRichText(content.hero.descripcion)}
        />
      </div>
    </div>
  </section>

  <!-- Introducción Section -->
  {
    content.introduccion.titulo && (
      <section class="acceleron-intro">
        <div class="container">
          <div class="acceleron-intro-content">
            <h2 class="acceleron-intro-title">{content.introduccion.titulo}</h2>
            <div
              class="acceleron-intro-text"
              set:html={renderRichText(content.introduccion.texto)}
            />
          </div>
        </div>
      </section>
    )
  }

  <!-- Bloques Section -->
  {
    content.bloques && content.bloques.length > 0 && (
      <section class="acceleron-subsections">
        <div class="container">
          {content.bloques.map((bloque, index) => (
            <div class={`acceleron-subsection acceleron-subsection-${index}`}>
              <div class="acceleron-subsection-image">
                {bloque.imagen?.url ? (
                  <img
                    src={bloque.imagen.url}
                    alt={bloque.imagen.alt || bloque.titulo}
                    loading="lazy"
                  />
                ) : (
                  <div class="acceleron-subsection-placeholder">
                    {bloque.titulo}
                  </div>
                )}
              </div>
              <div class="acceleron-subsection-content">
                <h3 class="acceleron-subsection-title">{bloque.titulo}</h3>
                {bloque.descripcion && (
                  <div class="acceleron-subsection-description">
                    <div set:html={renderRichText(bloque.descripcion)} />
                  </div>
                )}
              </div>
            </div>
          ))}
        </div>
      </section>
    )
  }

  <!-- Bloque Final -->
  {
    (content.bloque_final.imagen_desktop?.url ||
      content.bloque_final.imagen_mobile?.url ||
      content.bloque_final.texto?.length > 0) && (
      <section class="acceleron-imagen-texto-section">
        <div class="container">
          <div class="content-right-card-wrapper">
            {(content.bloque_final.imagen_desktop?.url ||
              content.bloque_final.imagen_mobile?.url) && (
              <div class="content-right-card-image">
                <picture>
                  {content.bloque_final.imagen_mobile?.url && (
                    <source
                      media="(max-width: 767px)"
                      srcset={content.bloque_final.imagen_mobile.url}
                    />
                  )}
                  {content.bloque_final.imagen_desktop?.url && (
                    <img
                      src={content.bloque_final.imagen_desktop.url}
                      alt={
                        content.bloque_final.imagen_desktop.alt ||
                        content.bloque_final.imagen_mobile?.alt ||
                        ""
                      }
                      loading="lazy"
                    />
                  )}
                </picture>
              </div>
            )}
            {content.bloque_final.texto?.length > 0 && (
              <div
                class="content-right-card-content"
                set:html={renderRichText(content.bloque_final.texto)}
              />
            )}
          </div>
        </div>
      </section>
    )
  }
</PageLayout>

<style>
  /* Hero Section - patrón con imagen mobile */
  .acceleron-hero {
    position: relative;
    /* Mobile: sin espacio arriba, solo abajo */
    padding: 0 0 var(--spacing-16) 0;
    /* Degradado mobile */
    background: linear-gradient(135deg, #287032 0%, #a6ce39 100%);
    border-radius: 0 0 60px 60px;
    overflow: hidden;
    min-width: auto;
    min-height: 628px;
  }

  .acceleron-hero-gradient {
    display: none;
  }

  .acceleron-hero-mobile-image {
    position: relative;
    z-index: 1;
    width: 100%;
    display: block;
  }

  .acceleron-hero-mobile-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Desktop: usar imagen de fondo en lugar de degradado */
  @media (min-width: 1024px) {
    .acceleron-hero-gradient {
      display: block;
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 100%;
      background-repeat: no-repeat;
      background-position: right top;
      background-size: contain;
      z-index: 0;
    }
    .acceleron-hero {
      position: relative;
      padding: var(--spacing-16) 0;
      background: linear-gradient(
        135deg,
        #a6ce39 0%,
        #287032 70%,
        #ffffff 100%
      );
      border-radius: 0;
      border-bottom-left-radius: 60px;
      min-width: 500px !important;
      min-height: 628px;
      display: flex;
      align-items: center;
    }
    .acceleron-hero .container {
      display: flex;
      align-items: center;
      height: 100%;
    }
    .acceleron-hero-mobile-image {
      display: none;
    }
    .acceleron-hero-content {
      padding-top: 0;
    }
  }

  .acceleron-hero-content {
    position: relative;
    z-index: 1;
    max-width: 462px;
  }

  .acceleron-logo {
    margin-bottom: var(--spacing-8);
  }

  .acceleron-logo img {
    height: 80px;
    width: auto;
  }

  .acceleron-hero-title {
    font-size: 2rem;
    font-weight: 700;
    font-family: var(--font-family-primary);
    color: #ffffff;
    margin: 0 0 var(--spacing-4) 0;
    line-height: 2.2rem;
    letter-spacing: 0.96px;
  }

  .acceleron-hero-description {
    font-size: 1.2rem;
    font-weight: 400;
    font-family: var(--font-family-primary);
    color: #ffffff;
    margin: 0;
    line-height: 1.3rem;
  }

  /* Introducción Section - Reutilizando estilos de fieldview */
  .acceleron-intro {
    padding: var(--spacing-16) 0;
    background-color: #ffffff;
  }

  .acceleron-intro-content {
    max-width: 707px;
    margin: 0 auto;
    text-align: center;
  }

  .acceleron-intro-title {
    font-size: 34px;
    font-weight: 700;
    font-family: var(--font-family-primary);
    color: #287032;
    margin: 0 0 var(--spacing-6) 0;
    line-height: 40.8px;
  }

  .acceleron-intro-text {
    font-size: 20px;
    font-weight: 400;
    font-family: var(--font-family-primary);
    color: #313639;
    margin: 0;
    line-height: 28px;
  }

  /* Subsections - Reutilizando estilos de fieldview */
  .acceleron-subsections {
    padding: var(--spacing-16) 0;
    background-color: #ffffff;
  }

  .acceleron-subsection {
    display: flex;
    flex-direction: column;
    gap: 0;
    margin-bottom: var(--spacing-12);
    overflow: hidden;
    background: linear-gradient(to right, #ffffff 0%, #e9e7e4 100%);
  }

  .acceleron-subsection-image {
    width: 100%;
    height: 300px;
    overflow: hidden;
    position: relative;
  }

  .acceleron-subsection-image img {
    width: 100%;
    height: 100%;
    object-fit: fill;
  }

  .acceleron-subsection-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(to right, #e9e7e4 0%, #ffffff 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #313639;
    font-size: 24px;
    font-weight: 600;
  }

  .acceleron-subsection-content {
    padding: var(--spacing-8);
    background-color: transparent;
  }

  .acceleron-subsection-title {
    font-size: 28px;
    font-weight: 700;
    font-family: var(--font-family-primary);
    color: #287032;
    margin: 0 0 var(--spacing-4) 0;
    line-height: 34px;
  }

  .acceleron-subsection-description {
    font-size: 14px;
    font-weight: 400;
    font-family: var(--font-family-primary);
    color: #313639;
    line-height: 22px;
  }

  .acceleron-subsection-description :global(p) {
    margin-bottom: var(--spacing-4);
  }

  /* Desktop Layout */
  @media (min-width: 1024px) {
    .acceleron-subsection {
      flex-direction: row;
      align-items: stretch;
      border-radius: 0 0 60px 0;
    }

    .acceleron-subsection-image {
      width: 45%;
      height: auto;
      flex-shrink: 0;
    }

    .acceleron-subsection-content {
      width: 55%;
      padding: var(--spacing-6) var(--spacing-20);
      display: flex;
      flex-direction: column;
      justify-content: center;
      background: transparent;
    }
  }

  /* Tablet */
  @media (min-width: 768px) and (max-width: 1023px) {
    .acceleron-hero-title {
      font-size: 36px;
      line-height: 44px;
    }

    .acceleron-intro-title {
      font-size: 28px;
      line-height: 34px;
    }

    .acceleron-subsection-title {
      font-size: 28px;
      line-height: 34px;
    }
  }

  /* Mobile */
  @media (max-width: 767px) {
    .acceleron-hero-title {
      font-size: 32px;
      line-height: 40px;
      letter-spacing: 0.5px;
    }

    .acceleron-hero-description {
      font-size: 18px;
      line-height: 24px;
    }

    .acceleron-intro-title {
      font-size: 24px;
      line-height: 30px;
    }

    .acceleron-intro-text {
      font-size: 18px;
      line-height: 24px;
    }

    .acceleron-subsection-title {
      font-size: 24px;
      line-height: 30px;
    }

    .acceleron-subsection-description {
      font-size: 18px;
      line-height: 24px;
    }
  }

  /* Bloque Final - Reutilizando estilos de proteccion-cultivo */
  .acceleron-imagen-texto-section {
    padding: var(--spacing-16) 0;
  }

  .acceleron-imagen-texto-section .content-right-card-wrapper {
    display: flex;
    flex-direction: column;
    gap: 0;
    align-items: stretch;
    background: linear-gradient(to left, #287032 0%, #a6ce39 100%);
    border-radius: 12px 12px 12px 12px;
    overflow: hidden;
    min-height: 400px;
    position: relative;
  }

  .acceleron-imagen-texto-section .content-right-card-content {
    text-align: left;
    padding: var(--spacing-12) var(--spacing-8);
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative;
    z-index: 2;
    order: 2;
  }

  .acceleron-imagen-texto-section .content-right-card-image {
    display: block;
    position: relative;
    overflow: hidden;
    order: 1;
    border-radius: 12px 12px 0 0;
  }

  .acceleron-imagen-texto-section .content-right-card-image img,
  .acceleron-imagen-texto-section .content-right-card-image picture {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Mobile: Content Right Card - Imagen primero, contenido después */
  @media (max-width: 767px) {
    .acceleron-imagen-texto-section .content-right-card-image {
      border-radius: 12px 12px 0 0;
      min-height: 200px;
      max-height: 300px;
    }

    .acceleron-imagen-texto-section .content-right-card-image img,
    .acceleron-imagen-texto-section .content-right-card-image picture {
      border-radius: 12px 12px 0 0;
    }

    .acceleron-imagen-texto-section .content-right-card-content {
      border-radius: 0 0 12px 12px;
    }
  }

  /* Desktop: Content Right Card - 60% imagen / 40% contenido */
  @media (min-width: 1024px) {
    .acceleron-imagen-texto-section .content-right-card-wrapper {
      display: grid;
      grid-template-columns: 60% 40%;
      gap: 0;
      min-height: 400px;
      border-radius: 60px 12px 60px 12px;
      background: linear-gradient(to left, #287032 0%, #a6ce39 100%);
    }

    .acceleron-imagen-texto-section .content-right-card-content {
      padding: var(--spacing-12) var(--spacing-12);
      order: unset;
    }

    .acceleron-imagen-texto-section .content-right-card-image {
      display: block;
      order: unset;
    }

    .acceleron-imagen-texto-section .content-right-card-image img,
    .acceleron-imagen-texto-section .content-right-card-image picture {
      object-fit: fill;
    }
  }

  /* Estilos para texto blanco dentro del contenido */
  .acceleron-imagen-texto-section .content-right-card-content :global(p),
  .acceleron-imagen-texto-section .content-right-card-content :global(strong),
  .acceleron-imagen-texto-section .content-right-card-content :global(em),
  .acceleron-imagen-texto-section .content-right-card-content :global(span),
  .acceleron-imagen-texto-section .content-right-card-content :global(h3),
  .acceleron-imagen-texto-section .content-right-card-content :global(h4) {
    color: #ffffff;
  }

  .acceleron-imagen-texto-section .content-right-card-content :global(strong) {
    font-weight: 700;
  }
</style>
