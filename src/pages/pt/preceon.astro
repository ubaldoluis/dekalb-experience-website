---
import PageLayout from "../../layouts/PageLayout.astro";
import { getPreceonContent } from "../../utils/prismic";
import { renderRichText } from "../../utils/prismic-rich-text";
import * as prismic from "@prismicio/client";

const lang = "pt";
let preceonContent = null;

try {
  preceonContent = await getPreceonContent(lang);
} catch (error) {
  console.error("Error fetching Preceon content:", error);
}

const defaultContent = {
  hero: {
    logo: undefined,
    titulo: "Preceon",
    descripcion: [],
    imagen_fondo: undefined,
    imagen_fondo_mobile: undefined,
  },
  titulo_intro: "",
  texto_intro: [],
  elementos_grid: [],
  produccion: {
    titulo: "",
    texto: [],
  },
  elementos_destacados: [],
  imagenes_degradado: [],
  bloque_final: {
    imagen: undefined,
    titulo: "",
    descripcion: [],
  },
};

const content = preceonContent || defaultContent;
---

<PageLayout
  title="Preceon"
  description={prismic.asText(content.hero.descripcion) || ""}
  lang={lang}
>
  <!-- Hero Section -->
  <section class="preceon-hero">
    <div
      class="preceon-hero-gradient"
      style={content.hero.imagen_fondo?.url
        ? `background-image: url("${content.hero.imagen_fondo.url}");`
        : ""}
    >
    </div>
    {
      content.hero.imagen_fondo_mobile?.url && (
        <div class="preceon-hero-mobile-image">
          <img
            src={content.hero.imagen_fondo_mobile.url}
            alt={content.hero.imagen_fondo_mobile.alt || ""}
            loading="lazy"
          />
        </div>
      )
    }
    <div class="container">
      <div class="preceon-hero-content">
        {
          content.hero.logo?.url && (
            <div class="preceon-logo">
              <img
                src={content.hero.logo.url}
                alt={content.hero.logo.alt || "Preceon"}
                loading="lazy"
              />
            </div>
          )
        }
        <h1 class="preceon-hero-title">{content.hero.titulo}</h1>
        <div
          class="preceon-hero-description"
          set:html={renderRichText(content.hero.descripcion)}
        />
      </div>
    </div>
  </section>

  <!-- Título Intro + Texto -->
  {
    content.titulo_intro && (
      <section class="preceon-titulo-intro">
        <div class="container">
          <div class="preceon-titulo-intro-content">
            <h2 class="preceon-titulo-intro-title">{content.titulo_intro}</h2>
            <div
              class="preceon-titulo-intro-text"
              set:html={renderRichText(content.texto_intro)}
            />
          </div>
        </div>
      </section>
    )
  }

  <!-- Elementos Grid -->
  {
    content.elementos_grid && content.elementos_grid.length > 0 && (
      <section class="preceon-elementos-grid">
        <div class="container">
          <div class="preceon-elementos-grid-wrapper">
            {content.elementos_grid.map((elemento) => (
              <div class="preceon-elemento-grid">
                {elemento.imagen?.url && (
                  <div class="preceon-elemento-grid-image">
                    <img
                      src={elemento.imagen.url}
                      alt={elemento.imagen.alt || ""}
                      loading="lazy"
                    />
                  </div>
                )}
                <div
                  class="preceon-elemento-grid-text"
                  set:html={renderRichText(elemento.texto)}
                />
              </div>
            ))}
          </div>
        </div>
      </section>
    )
  }

  <!-- Produção e Qualidade -->
  {
    content.produccion.titulo && (
      <section class="preceon-produccion">
        <div class="container">
          <div class="preceon-produccion-content">
            <h2 class="preceon-produccion-title">
              {content.produccion.titulo}
            </h2>
            <div
              class="preceon-produccion-text"
              set:html={renderRichText(content.produccion.texto)}
            />
          </div>
        </div>
      </section>
    )
  }

  <!-- Elementos Destacados -->
  {
    content.elementos_destacados && content.elementos_destacados.length > 0 && (
      <section class="preceon-elementos-destacados">
        <div class="container">
          <div class="preceon-elementos-destacados-wrapper">
            {content.elementos_destacados.map((elemento) => (
              <div class="preceon-elemento-destacado">
                <div class="preceon-elemento-destacado-content">
                  <h3 class="preceon-elemento-destacado-title">
                    {elemento.titulo}
                  </h3>
                  <div
                    class="preceon-elemento-destacado-text"
                    set:html={renderRichText(elemento.texto)}
                  />
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>
    )
  }

  <!-- Imagens com Degradado -->
  {
    content.imagenes_degradado && content.imagenes_degradado.length > 0 && (
      <section class="preceon-imagenes-degradado">
        <div class="container">
          <div class="preceon-imagenes-degradado-wrapper">
            {content.imagenes_degradado.map((item) => (
              <div class="preceon-imagen-degradado">
                {item.imagen?.url && (
                  <div class="preceon-imagen-degradado-image">
                    <img
                      src={item.imagen.url}
                      alt={item.imagen.alt || ""}
                      loading="lazy"
                    />
                  </div>
                )}
                <div
                  class="preceon-imagen-degradado-text"
                  set:html={renderRichText(item.texto)}
                />
              </div>
            ))}
          </div>
        </div>
      </section>
    )
  }

  <!-- Bloco Final -->
  {
    content.bloque_final.titulo && (
      <section class="preceon-bloque-final">
        <div class="container">
          <div class="preceon-bloque-final-wrapper">
            {content.bloque_final.imagen?.url && (
              <div class="preceon-bloque-final-image">
                <img
                  src={content.bloque_final.imagen.url}
                  alt={content.bloque_final.imagen.alt || ""}
                  loading="lazy"
                />
              </div>
            )}
            <div class="preceon-bloque-final-content">
              <h3 class="preceon-bloque-final-title">
                {content.bloque_final.titulo}
              </h3>
              <div
                class="preceon-bloque-final-description"
                set:html={renderRichText(content.bloque_final.descripcion)}
              />
            </div>
          </div>
        </div>
      </section>
    )
  }
</PageLayout>

<style>
  /* Hero - Mismo código que fieldshield pero con gradiente #9A0D4A a #D30F4B */
  .preceon-hero {
    position: relative;
    padding: 0 0 var(--spacing-16) 0;
    background: linear-gradient(135deg, #9a0d4a 0%, #d30f4b 100%);
    border-radius: 0 0 60px 60px;
    overflow: hidden;
    min-width: auto;
    min-height: 628px;
  }

  .preceon-hero-gradient {
    display: none;
  }

  .preceon-hero-mobile-image {
    position: relative;
    z-index: 1;
    width: 100%;
    display: block;
  }

  .preceon-hero-mobile-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  @media (min-width: 1024px) {
    .preceon-hero-gradient {
      display: block;
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 100%;
      background-repeat: no-repeat;
      background-position: center top;
      background-size: contain;
      z-index: 0;
    }
    .preceon-hero {
      position: relative;
      padding: var(--spacing-16) 0;
      background: linear-gradient(135deg, #d30f4b 0%, #9a0d4a 100%);
      border-radius: 0;
      min-width: 500px !important;
    }
    .preceon-hero .container {
      display: flex;
      align-items: center;
      min-height: 628px;
    }
    .preceon-hero-content {
      padding-top: 0;
    }
    .preceon-hero-mobile-image {
      display: none;
    }
  }

  .preceon-hero-content {
    position: relative;
    z-index: 1;
    max-width: 360px;
    padding-top: var(--spacing-20);
  }

  .preceon-logo {
    margin-bottom: var(--spacing-8);
  }

  .preceon-logo img {
    height: 80px;
    width: auto;
  }

  .preceon-hero-title {
    font-size: 2rem;
    font-weight: 700;
    font-family: var(--font-family-primary);
    color: #ffffff;
    margin: 0 0 var(--spacing-4) 0;
    line-height: 2.2rem;
    letter-spacing: 0.96px;
  }

  .preceon-hero-description {
    font-size: 1.2rem;
    font-weight: 400;
    font-family: var(--font-family-primary);
    color: #ffffff;
    margin: 0;
    line-height: 1.3rem;
  }

  /* Título Intro */
  .preceon-titulo-intro {
    padding: var(--spacing-16) 0;
    background-color: #ffffff;
  }

  .preceon-titulo-intro-content {
    max-width: 707px;
    margin: 0 auto;
    text-align: center;
  }

  .preceon-titulo-intro-title {
    font-size: 34px;
    font-weight: 700;
    font-family: var(--font-family-primary);
    color: #d30f4b;
    margin: 0 0 var(--spacing-6) 0;
    line-height: 40.8px;
  }

  .preceon-titulo-intro-text {
    font-size: 20px;
    font-weight: 400;
    font-family: var(--font-family-primary);
    color: #313639;
    margin: 0;
    line-height: 28px;
  }

  /* Elementos Grid */
  .preceon-elementos-grid {
    padding: var(--spacing-16) 0;
    background-color: #ffffff;
  }

  .preceon-elementos-grid-wrapper {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-8);
    align-items: center;
  }

  .preceon-elemento-grid {
    background-color: #f3f3f3;
    border-radius: 12px;
    padding: var(--spacing-8);
    text-align: center;
    width: 100%;
    max-width: 400px;
  }

  .preceon-elemento-grid-image {
    margin-bottom: var(--spacing-4);
  }

  .preceon-elemento-grid-image img {
    width: 100%;
    height: auto;
    object-fit: contain;
  }

  .preceon-elemento-grid-text {
    font-size: 16px;
    font-weight: 400;
    font-family: var(--font-family-primary);
    color: #d30f4b;
    line-height: 24px;
  }

  @media (min-width: 1024px) {
    .preceon-elementos-grid-wrapper {
      flex-direction: row;
      justify-content: center;
      flex-wrap: wrap;
    }

    .preceon-elemento-grid {
      flex: 0 1 auto;
      min-width: 250px;
    }
  }

  /* Produção e Qualidade */
  .preceon-produccion {
    padding: var(--spacing-16) 0;
    background-color: #ffffff;
  }

  .preceon-produccion-content {
    max-width: 707px;
    margin: 0 auto;
    text-align: center;
  }

  .preceon-produccion-title {
    font-weight: 700;
    font-family: var(--font-family-primary);
    color: #d30f4b;
    margin: 0 0 var(--spacing-6) 0;
    line-height: 40.8px;
  }

  .preceon-produccion-text {
    font-size: 20px;
    font-weight: 400;
    font-family: var(--font-family-primary);
    color: #313639;
    margin: 0;
    line-height: 28px;
  }

  /* Elementos Destacados */
  .preceon-elementos-destacados {
    padding: 0 0 var(--spacing-16) 0;
    background-color: #ffffff;
  }

  .preceon-elementos-destacados-wrapper {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-8);
    max-width: 800px;
    margin: 0 auto;
  }

  .preceon-elemento-destacado {
    background-color: #f3f3f3;
    border-radius: 8px;
    padding: var(--spacing-6);
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .preceon-elemento-destacado-content {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
    text-align: center;
  }

  .preceon-elemento-destacado-title {
    font-size: 24px;
    font-weight: 700;
    font-family: var(--font-family-primary);
    color: #d30f4b;
    margin: 0 0 var(--spacing-4) 0;
    line-height: 30px;
    text-align: center;
    flex-shrink: 0;
  }

  .preceon-elemento-destacado-text {
    font-size: 16px;
    font-weight: 400;
    font-family: var(--font-family-primary);
    line-height: 24px;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
  }

  .preceon-elemento-destacado-text :global(ul),
  .preceon-elemento-destacado-text :global(ol) {
    text-align: left;
    display: inline-block;
    width: 100%;
    padding-left: var(--spacing-6);
    margin: 0;
  }

  .preceon-elemento-destacado-text :global(li) {
    margin-bottom: var(--spacing-2);
  }

  @media (min-width: 1024px) {
    .preceon-elementos-destacados-wrapper {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* Imagens com Degradado */
  .preceon-imagenes-degradado {
    padding: var(--spacing-16) 0;
    background: linear-gradient(to bottom, #b81b52 0%, #64304d 100%);
  }

  .preceon-imagenes-degradado-wrapper {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-8);
  }

  .preceon-imagen-degradado {
    text-align: center;
    color: #ffffff;
  }

  .preceon-imagen-degradado-image {
    margin-bottom: var(--spacing-4);
    display: flex;
    justify-content: center;
  }

  .preceon-imagen-degradado-image img {
    width: 150px;
    height: 150px;
    object-fit: contain;
  }

  .preceon-imagen-degradado-text {
    font-size: 14px;
    font-weight: 400;
    font-family: var(--font-family-primary);
    color: #ffffff;
    line-height: 1rem;
  }

  .preceon-imagen-degradado-text :global(p) {
    margin-bottom: 0 !important;
  }

  /* Bloco Final - Reutilizando estilos de fieldshield */
  .preceon-bloque-final {
    padding: var(--spacing-16) 0;
    background-color: #ffffff;
  }

  .preceon-bloque-final-wrapper {
    display: flex;
    flex-direction: column;
    gap: 0;
    overflow: hidden;
    background: linear-gradient(to right, #ffffff 0%, #e9e7e4 100%);
  }

  .preceon-bloque-final-image {
    width: 100%;
    height: 300px;
    overflow: hidden;
  }

  .preceon-bloque-final-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .preceon-bloque-final-content {
    padding: var(--spacing-8);
    background-color: transparent;
  }

  .preceon-bloque-final-title {
    font-size: 28px;
    font-weight: 700;
    font-family: var(--font-family-primary);
    color: #009ddb;
    margin: 0 0 var(--spacing-4) 0;
    line-height: 34px;
  }

  .preceon-bloque-final-description {
    font-size: 14px;
    font-weight: 400;
    font-family: var(--font-family-primary);
    color: #313639;
    line-height: 22px;
  }

  .preceon-bloque-final-description :global(p) {
    margin-bottom: var(--spacing-4);
  }

  @media (min-width: 1024px) {
    .preceon-bloque-final-wrapper {
      flex-direction: row;
      align-items: stretch;
      border-radius: 0 0 60px 0;
    }

    .preceon-bloque-final-image {
      width: 45%;
      height: auto;
      flex-shrink: 0;
    }

    .preceon-bloque-final-content {
      width: 55%;
      padding: var(--spacing-6) var(--spacing-20);
      display: flex;
      flex-direction: column;
      justify-content: center;
    }
  }

  /* Mobile */
  @media (max-width: 767px) {
    .preceon-hero-title {
      font-size: 32px;
      line-height: 40px;
      letter-spacing: 0.5px;
    }

    .preceon-hero-description {
      font-size: 18px;
      line-height: 24px;
    }

    .preceon-titulo-intro-title {
      font-size: 24px;
      line-height: 30px;
    }

    .preceon-titulo-intro-text {
      font-size: 18px;
      line-height: 24px;
    }

    .preceon-produccion-title {
      font-size: 24px;
      line-height: 30px;
    }

    .preceon-produccion-text {
      font-size: 18px;
      line-height: 24px;
    }
  }
</style>
