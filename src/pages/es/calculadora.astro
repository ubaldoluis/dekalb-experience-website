---
import PageLayout from '../../layouts/PageLayout.astro';
import DensityCalculator from '../../components/DensityCalculator.astro';

const lang = 'es';
---

<PageLayout title="Calculador de Densidades" description="Calcula la densidad de siembra recomendada para tu cultivo" lang={lang}>
  <section class="calculator-page">
    <div class="container">
      <DensityCalculator lang={lang} />
    </div>
  </section>
</PageLayout>

<style>
  .calculator-page {
    padding: var(--spacing-16) 0;
    background: linear-gradient(135deg, var(--color-gray-50) 0%, var(--color-white) 100%);
  }
</style>

