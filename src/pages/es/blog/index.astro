---
import PageLayout from '../../layouts/PageLayout.astro';
import { getAllArticles } from '../../../utils/prismic';
import { getLocalizedPath } from '../../../utils/i18n';

const lang = 'es';
let articles: any[] = [];

try {
  articles = await getAllArticles(lang);
} catch (error) {
  console.error('Error fetching articles:', error);
}

const categoryLabels: Record<string, string> = {
  'noticia': 'Noticia',
  'evento': 'Evento',
  'articulo': 'Artículo',
  'lanzamiento': 'Lanzamiento',
};
---

<PageLayout title="Blog" description="Últimas noticias y artículos sobre agricultura" lang={lang}>
  <section class="blog-listing">
    <div class="container">
      <header class="blog-header">
        <h1>Blog</h1>
        <p>Últimas noticias, eventos y artículos sobre agricultura y tecnología agrícola</p>
      </header>

      {articles.length > 0 ? (
        <div class="blog-grid">
          {articles.map((article) => (
            <article class="blog-card">
              {article.imagen_destacada?.url && (
                <a href={getLocalizedPath(`/blog/${article.slug}`, lang)} class="blog-image-link">
                  <img 
                    src={article.imagen_destacada.url} 
                    alt={article.imagen_destacada.alt || article.titulo}
                    class="blog-image"
                    loading="lazy"
                  />
                </a>
              )}
              <div class="blog-card-content">
                <span class="badge badge-primary">
                  {categoryLabels[article.categoria] || article.categoria}
                </span>
                <h2 class="blog-card-title">
                  <a href={getLocalizedPath(`/blog/${article.slug}`, lang)}>
                    {article.titulo}
                  </a>
                </h2>
                <time class="blog-card-date" datetime={article.fecha}>
                  {new Date(article.fecha).toLocaleDateString('es-ES', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                  })}
                </time>
                {article.extracto && (
                  <p class="blog-card-excerpt">{article.extracto}</p>
                )}
                <a href={getLocalizedPath(`/blog/${article.slug}`, lang)} class="btn btn-outline">
                  Leer más
                </a>
              </div>
            </article>
          ))}
        </div>
      ) : (
        <div class="blog-empty">
          <p>No hay artículos disponibles en este momento.</p>
        </div>
      )}
    </div>
  </section>
</PageLayout>

<style>
  .blog-listing {
    padding: var(--spacing-16) 0;
  }

  .blog-header {
    text-align: center;
    margin-bottom: var(--spacing-12);
  }

  .blog-header h1 {
    font-size: var(--font-size-4xl);
    margin-bottom: var(--spacing-4);
  }

  .blog-header p {
    font-size: var(--font-size-lg);
    color: var(--color-gray-600);
  }

  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: var(--spacing-6);
  }

  .blog-card {
    background: var(--color-white);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-md);
    transition: all var(--transition-base);
    display: flex;
    flex-direction: column;
  }

  .blog-card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
  }

  .blog-image-link {
    display: block;
    width: 100%;
    overflow: hidden;
  }

  .blog-image {
    width: 100%;
    aspect-ratio: 16/9;
    object-fit: cover;
    transition: transform var(--transition-base);
  }

  .blog-card:hover .blog-image {
    transform: scale(1.05);
  }

  .blog-card-content {
    padding: var(--spacing-4);
    display: flex;
    flex-direction: column;
    gap: var(--spacing-2);
    flex: 1;
  }

  .blog-card-title {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-semibold);
    margin: 0;
  }

  .blog-card-title a {
    color: var(--color-gray-900);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .blog-card-title a:hover {
    color: var(--color-dekalb-primary);
  }

  .blog-card-date {
    font-size: var(--font-size-xs);
    color: var(--color-gray-500);
  }

  .blog-card-excerpt {
    font-size: var(--font-size-sm);
    color: var(--color-gray-600);
    margin: var(--spacing-2) 0;
    flex: 1;
  }

  .blog-empty {
    text-align: center;
    padding: var(--spacing-12);
    color: var(--color-gray-600);
  }

  @media (max-width: 767px) {
    .blog-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

