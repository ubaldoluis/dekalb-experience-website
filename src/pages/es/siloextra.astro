---
import PageLayout from "../../layouts/PageLayout.astro";
import { getSiloextraContent } from "../../utils/prismic";
import { renderRichText } from "../../utils/prismic-rich-text";
import * as prismic from "@prismicio/client";

const lang = "es";
let siloextraContent = null;

try {
  siloextraContent = await getSiloextraContent(lang);
} catch (error) {
  console.error("Error fetching Siloextra content:", error);
}

const defaultContent = {
  hero: {
    titulo: "Siloextra",
    descripcion: [],
    imagen_fondo: undefined,
    imagen_fondo_mobile: undefined,
  },
  introduccion: {
    titulo: "",
    texto: [],
  },
  bloques: [],
};

const content = siloextraContent || defaultContent;
---

<PageLayout
  title="Siloextra"
  description={prismic.asText(content.hero.descripcion) || ""}
  lang={lang}
>
  <!-- Hero -->
  <section class="siloextra-hero">
    <div
      class="siloextra-hero-gradient"
      style={content.hero.imagen_fondo?.url
        ? `background-image: url("${content.hero.imagen_fondo.url}");`
        : ""}
    >
    </div>
    {
      content.hero.imagen_fondo_mobile?.url && (
        <div class="siloextra-hero-mobile-image">
          <img
            src={content.hero.imagen_fondo_mobile.url}
            alt={content.hero.imagen_fondo_mobile.alt || ""}
            loading="lazy"
          />
        </div>
      )
    }
    <div class="container">
      <div class="siloextra-hero-content">
        <h1 class="siloextra-hero-title">{content.hero.titulo}</h1>
        <div
          class="siloextra-hero-description"
          set:html={renderRichText(content.hero.descripcion)}
        />
      </div>
    </div>
  </section>

  <!-- IntroducciÃ³n -->
  {
    content.introduccion.titulo && (
      <section class="siloextra-intro">
        <div class="container">
          <div class="siloextra-intro-content">
            <h2 class="siloextra-intro-title">{content.introduccion.titulo}</h2>
            <div
              class="siloextra-intro-text"
              set:html={renderRichText(content.introduccion.texto)}
            />
          </div>
        </div>
      </section>
    )
  }

  <!-- Bloques imagen + texto -->
  {
    content.bloques && content.bloques.length > 0 && (
      <section class="siloextra-bloques">
        <div class="container">
          {content.bloques.map((bloque, index) => (
            <div class={`siloextra-bloque siloextra-bloque-${index}`}>
              <div class="siloextra-bloque-image">
                {bloque.imagen?.url ? (
                  <img
                    src={bloque.imagen.url}
                    alt={bloque.imagen.alt || bloque.titulo}
                    loading="lazy"
                  />
                ) : (
                  <div class="siloextra-bloque-placeholder">
                    {bloque.titulo}
                  </div>
                )}
              </div>
              <div class="siloextra-bloque-content">
                <h3 class="siloextra-bloque-title">{bloque.titulo}</h3>
                {bloque.descripcion && (
                  <div class="siloextra-bloque-description">
                    <div set:html={renderRichText(bloque.descripcion)} />
                  </div>
                )}
              </div>
            </div>
          ))}
        </div>
      </section>
    )
  }
</PageLayout>

<style>
  .siloextra-hero {
    position: relative;
    padding: 0 0 var(--spacing-16) 0;
    background: linear-gradient(135deg, #fded0a 0%, #f5a81c 100%);
    border-radius: 0 0 60px 60px;
    overflow: hidden;
    min-width: auto;
    min-height: 628px;
  }

  .siloextra-hero-gradient {
    display: none;
  }

  .siloextra-hero-mobile-image {
    position: relative;
    z-index: 1;
    width: 100%;
    display: block;
  }

  .siloextra-hero-mobile-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .siloextra-hero-content {
    position: relative;
    z-index: 1;
    max-width: 462px;
  }

  .siloextra-hero-title {
    font-size: 3rem;
    font-weight: 700;
    font-family: var(--font-family-primary);
    color: #ffffff;
    margin: 0 0 var(--spacing-4) 0;
    line-height: 3.2rem;
    letter-spacing: 0.96px;
  }

  .siloextra-hero-description {
    font-size: 1.2rem;
    font-weight: 400;
    font-family: var(--font-family-primary);
    color: #ffffff;
    margin: 0;
    line-height: 1.3rem;
  }
  .siloextra-hero-description :global(h4),
  .siloextra-hero-description h4 {
    color: #ffffff !important;
  }
  .siloextra-intro {
    padding: var(--spacing-16) 0 0 0;
    background-color: #ffffff;
  }

  .siloextra-intro-content {
    max-width: 707px;
    margin: 0 auto;
    text-align: center;
  }

  .siloextra-intro-title {
    font-size: 34px;
    font-weight: 700;
    font-family: var(--font-family-primary);
    color: #009ddb;
    margin: 0 0 var(--spacing-6) 0;
    line-height: 40.8px;
  }

  .siloextra-intro-text {
    font-size: 20px;
    font-weight: 400;
    font-family: var(--font-family-primary);
    color: #313639;
    margin: 0;
    line-height: 28px;
  }

  .siloextra-bloques {
    padding: var(--spacing-8) 0 0 0;
    background-color: #ffffff;
  }

  .siloextra-bloque {
    display: flex;
    flex-direction: column;
    gap: 0;
    margin-bottom: var(--spacing-12);
    background: linear-gradient(to right, #ffffff 0%, #e9e7e4 100%);
    overflow: hidden;
  }

  .siloextra-bloque-image {
    width: 100%;
    height: 300px;
    overflow: hidden;
  }

  .siloextra-bloque-image img {
    /* width: 100%;
    height: 100%; */
    object-fit: fill;
  }

  .siloextra-bloque-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(to right, #e9e7e4 0%, #ffffff 100%);
    color: #313639;
    font-size: 24px;
    font-weight: 600;
  }

  .siloextra-bloque-content {
    padding: var(--spacing-8);
    background-color: transparent;
  }

  .siloextra-bloque-title {
    font-size: 2.2rem;
    font-weight: 700;
    font-family: var(--font-family-primary);
    color: #009ddb;
    margin: 0 0 var(--spacing-4) 0;
    line-height: 2.4rem;
  }

  .siloextra-bloque-description {
    font-size: 1.3rem;
    font-weight: 400;
    font-family: var(--font-family-primary);
    color: #313639;
    line-height: 1.5rem;
  }

  .siloextra-bloque-description :global(p) {
    margin-bottom: var(--spacing-4);
  }

  @media (min-width: 1024px) {
    .siloextra-hero-gradient {
      display: block;
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 100%;
      background-repeat: no-repeat;
      background-position: right top;
      background-size: contain;
      z-index: 0;
    }
    .siloextra-hero {
      position: relative;
      padding: var(--spacing-16) 0;
      background: linear-gradient(
        135deg,
        #f5a81c 0%,
        #fded0a 70%,
        #ffffff 100%
      );
      border-radius: 0;
      border-bottom-left-radius: 60px;
      min-width: 500px !important;
      min-height: 628px;
      display: flex;
      align-items: center;
    }
    .siloextra-hero .container {
      display: flex;
      align-items: center;
      height: 100%;
    }
    .siloextra-hero-mobile-image {
      display: none;
    }
    .siloextra-hero-content {
      padding-top: 0;
      margin-top: 0;
    }

    .siloextra-bloque {
      flex-direction: row;
      align-items: stretch;
      border-radius: 0 0 60px 0;
    }

    .siloextra-bloque-image {
      width: 45%;
      height: auto;
      flex-shrink: 0;
    }

    .siloextra-bloque-content {
      width: 55%;
      padding: var(--spacing-6) var(--spacing-20);
      display: flex;
      flex-direction: column;
      justify-content: center;
      background: transparent;
    }
  }

  /* Tablet */
  @media (min-width: 768px) and (max-width: 1023px) {
    .siloextra-bloque-title {
      font-size: 28px;
      line-height: 34px;
    }
  }

  /* Mobile */
  @media (max-width: 767px) {
    .siloextra-bloque-title {
      font-size: 24px;
      line-height: 30px;
    }

    .siloextra-bloque-description {
      font-size: 18px;
      line-height: 24px;
    }
  }
</style>
