---
interface Props {
  imagen?: {
    url: string;
    alt?: string;
  };
  titulo: string;
  descripcion: string;
}

const { imagen, titulo, descripcion } = Astro.props;
---

<div class="product-card">
  {
    imagen?.url && (
      <div class="product-card-header">
        <img
          src={imagen.url}
          alt={imagen.alt || titulo}
          loading="lazy"
        />
      </div>
    )
  }
  <div class="product-card-body">
    <p class="product-card-description">{descripcion}</p>
  </div>
</div>

<style>
  .product-card {
    background-color: #009ddb;
    border-radius: 12px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    height: 100%;
    transition: all var(--transition-base);
  }

  .product-card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
  }

  .product-card-header {
    width: 100%;
    height: 200px;
    overflow: hidden;
    background-color: transparent;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .product-card-header img {
    width: 100%;
    height: 100%;
  }

  .product-card-body {
    padding: var(--spacing-6);
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .product-card-description {
    font-size: 20px;
    font-weight: 400;
    font-family: var(--font-family-primary);
    color: #ffffff;
    margin: 0;
    line-height: 26px;
  }

  @media (max-width: 767px) {
    .product-card-header {
      height: 150px;
    }

    .product-card-body {
      padding: var(--spacing-4);
    }

    .product-card-description {
      font-size: 18px;
      line-height: 24px;
    }
  }
</style>
