---
import type { Idioma } from "../types";

interface Props {
  lang?: Idioma;
}

const { lang = "es" } = Astro.props;

const currentYear = new Date().getFullYear();

// Translations
const translations = {
  es: {
    generalConditions: "Condiciones Generales de Uso",
    imprint: "Pie de imprenta",
    privacy: "Política de privacidad",
    technicalData: "Datos Técnicos",
  },
  pt: {
    generalConditions: "Condições Gerais de Uso",
    imprint: "Impressum",
    privacy: "Política de privacidade",
    technicalData: "Dados Técnicos",
  },
};

const t = translations[lang] || translations.es;
const domain = lang === "pt" ? "pt" : "es";
---

<footer
  class="footer"
  role="contentinfo"
>
  <div class="footer-container">
    <p class="footer-copyright">Copyright © {currentYear} Bayer AG</p>
    <nav class="footer-links">
      <a
        href={`https://www.cropscience.bayer.${domain}/general-conditions-of-use`}
        class="footer-link"
        >{t.generalConditions}</a
      >
      <a
        href={`https://www.cropscience.bayer.${domain}/imprint`}
        class="footer-link"
        >{t.imprint}</a
      >
      <a
        href={`https://www.cropscience.bayer.${domain}/privacy-statement`}
        class="footer-link"
        >{t.privacy}</a
      >
      <a
        href={`https://www.cropscience.bayer.${domain}/general-conditions-of-use`}
        class="footer-link"
        >{t.technicalData}</a
      >
    </nav>
    <div class="footer-social">
      <a
        href="https://www.facebook.com/bayer"
        target="_blank"
        rel="noopener noreferrer"
        class="social-icon"
        aria-label="Facebook"
      >
        <img
          src="/icon_footer-facebook.svg"
          alt=""
          aria-hidden="true"
        />
      </a>
      <a
        href="https://twitter.com/bayer"
        target="_blank"
        rel="noopener noreferrer"
        class="social-icon"
        aria-label="Twitter"
      >
        <svg
          width="27"
          height="27"
          viewBox="0 0 24 24"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
            fill="currentColor"
          ></path>
        </svg>
      </a>
      <a
        href="https://www.instagram.com/bayer"
        target="_blank"
        rel="noopener noreferrer"
        class="social-icon"
        aria-label="Instagram"
      >
        <img
          src="/icon_footer-instagram.svg"
          alt=""
          aria-hidden="true"
        />
      </a>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: #009ddb;
    color: #ffffff;
    padding: 0;
    margin-top: var(--spacing-16);
    border-radius: 12px 12px 0 0;
    overflow: hidden;
  }

  .footer-container {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 var(--spacing-10);
    height: 140px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--spacing-8);
  }

  .footer-copyright {
    color: #ffffff;
    font-size: 20px;
    font-weight: 400;
    font-family: var(--font-family-primary);
    line-height: 26px;
    margin: 0;
    white-space: nowrap;
    opacity: 0.6;
  }

  .footer-links {
    display: flex;
    align-items: center;
    gap: var(--spacing-8);
    flex-wrap: wrap;
    justify-content: center;
    flex: 1;
  }

  .footer-link {
    color: #ffffff;
    font-size: 20px;
    font-weight: 400;
    font-family: var(--font-family-primary);
    text-decoration: none;
    line-height: 26px;
    transition: opacity var(--transition-base);
    white-space: nowrap;
  }

  .footer-link:hover {
    opacity: 0.8;
  }

  .footer-social {
    display: flex;
    align-items: center;
    gap: var(--spacing-4);
  }

  .social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 27px;
    height: 27px;
    color: #ffffff;
    transition: opacity var(--transition-base);
  }

  .social-icon:hover {
    opacity: 0.8;
  }

  .social-icon img,
  .social-icon svg {
    width: 100%;
    height: 100%;
    display: block;
  }

  .social-icon svg {
    fill: currentColor;
  }

  @media (max-width: 1023px) {
    .footer-container {
      flex-direction: column;
      height: auto;
      padding: var(--spacing-6) var(--spacing-4);
      gap: var(--spacing-4);
    }

    .footer-links {
      flex-direction: column;
      gap: var(--spacing-4);
      width: 100%;
    }

    .footer-link {
      text-align: center;
    }

    .footer-copyright {
      text-align: center;
    }

    .footer-social {
      justify-content: center;
    }
  }

  @media (max-width: 767px) {
    .footer-container {
      padding: var(--spacing-4);
    }

    .footer-copyright,
    .footer-link {
      font-size: 16px;
    }
  }
</style>
